{
  "name": "crypto-insurance-system",
  "version": "1.0.0",
  "description": "Blockchain-Based Insurance Claim System for Crypto-Asset Risks",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "node": "hardhat node",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "start:dev": "concurrently \"npm run node\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "demo": "node scripts/demo.js",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "concurrently": "^8.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ethers": "^6.7.1",
    "dotenv": "^16.3.1"
  }
}